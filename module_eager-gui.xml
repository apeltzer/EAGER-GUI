<?xml version="1.0" encoding="UTF-8"?>
<project name="module_eager-gui" default="compile.module.eager-gui">
  <dirname property="module.eager-gui.basedir" file="${ant.file.module_eager-gui}"/>
  
  <property name="module.jdk.home.eager-gui" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.eager-gui" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.eager-gui" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.eager-gui" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="eager-gui.output.dir" value="${module.eager-gui.basedir}/out/production/EAGER-GUI"/>
  <property name="eager-gui.testoutput.dir" value="${module.eager-gui.basedir}/out/test/EAGER-GUI"/>
  
  <path id="eager-gui.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="eager-gui.module.production.classpath">
    <path refid="${module.jdk.classpath.eager-gui}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  <path id="eager-gui.runtime.production.module.classpath">
    <pathelement location="${eager-gui.output.dir}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  <path id="eager-gui.module.classpath">
    <path refid="${module.jdk.classpath.eager-gui}"/>
    <pathelement location="${eager-gui.output.dir}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  <path id="eager-gui.runtime.module.classpath">
    <pathelement location="${eager-gui.testoutput.dir}"/>
    <pathelement location="${eager-gui.output.dir}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.eager-gui">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.eager-gui">
    <patternset refid="excluded.from.module.eager-gui"/>
  </patternset>
  
  <path id="eager-gui.module.sourcepath">
    <dirset dir="${module.eager-gui.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.eager-gui" depends="compile.module.eager-gui.production,compile.module.eager-gui.tests" description="Compile module EAGER-GUI"/>
  
  <target name="compile.module.eager-gui.production" depends="register.custom.compilers" description="Compile module EAGER-GUI; production classes">
    <mkdir dir="${eager-gui.output.dir}"/>
    <javac2 destdir="${eager-gui.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.eager-gui}/javac">
      <compilerarg line="${compiler.args.eager-gui}"/>
      <bootclasspath refid="eager-gui.module.bootclasspath"/>
      <classpath refid="eager-gui.module.production.classpath"/>
      <src refid="eager-gui.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.eager-gui"/>
    </javac2>
    
    <copy todir="${eager-gui.output.dir}">
      <fileset dir="${module.eager-gui.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.eager-gui.tests" depends="register.custom.compilers,compile.module.eager-gui.production" description="compile module EAGER-GUI; test classes" unless="skip.tests"/>
  
  <target name="clean.module.eager-gui" description="cleanup module">
    <delete dir="${eager-gui.output.dir}"/>
    <delete dir="${eager-gui.testoutput.dir}"/>
  </target>
</project>